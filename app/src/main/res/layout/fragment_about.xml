<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".settings.AboutFragment"
    android:background="?attr/bg">

    <include
        layout="@layout/about_toolbar"
        android:id="@+id/about_toolbar_object"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        android:fillViewport="true"
        android:layout_below="@id/about_toolbar_object"
        android:background="?attr/bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp"
            android:background="?attr/bg"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:backgroundTint="?attr/bg"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/sa">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sa"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sa"
                app:civ_border_width="2dp"
                app:civ_border_color="?attr/primaryTextColor"/>
            <TextView
                android:id="@+id/saname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/sa"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:text="Safin Ahmed"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="?attr/primaryTextColor" />
            <TextView
                android:id="@+id/saemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/sa"
                android:layout_below="@id/saname"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:text="ec19235@qmul.ac.uk"
                android:textSize="15dp"
                android:textColor="?attr/primaryTextColor" />
            <Button
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_toEndOf="@id/sa"
                android:layout_below="@id/saemail"
                android:text="Front End Developer"
                android:textSize="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/green_button"
                />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/jd"
                android:layout_below="@+id/sa"
                android:layout_marginTop="15dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/jd"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/jd"
                    app:civ_border_width="2dp"
                    app:civ_border_color="?attr/primaryTextColor"/>
                <TextView
                    android:id="@+id/jdname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/jd"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:text="Jivraj Dhamijia"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTextColor" />
                <TextView
                    android:id="@+id/jdemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/jd"
                    android:layout_below="@id/jdname"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:text="jd2158@bath.ac.uk"
                    android:textSize="15dp"
                    android:textColor="?attr/primaryTextColor" />
                <Button
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@id/jd"
                    android:layout_below="@id/jdemail"
                    android:text="Front End Developer"
                    android:textSize="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/green_button"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/he"
                android:layout_below="@+id/jd"
                android:layout_marginTop="15dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/he"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/he"
                    app:civ_border_width="2dp"
                    app:civ_border_color="?attr/primaryTextColor"/>
                <TextView
                    android:id="@+id/hename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/he"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:text="Henry Eason"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTextColor" />
                <TextView
                    android:id="@+id/heemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/he"
                    android:layout_below="@id/hename"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:text="he328@bath.ac.uk"
                    android:textSize="15dp"
                    android:textColor="?attr/primaryTextColor" />
                <Button
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@id/he"
                    android:layout_below="@id/heemail"
                    android:text="Back End Developer"
                    android:textSize="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/red_button"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/vn"
                android:layout_below="@+id/he"
                android:layout_marginTop="15dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/vn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/vn"
                    app:civ_border_width="2dp"
                    app:civ_border_color="?attr/primaryTextColor"/>
                <TextView
                    android:id="@+id/vnname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/vn"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:text="Vedant Nemane"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTextColor" />
                <TextView
                    android:id="@+id/vnemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/vn"
                    android:layout_below="@id/vnname"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:text="he328@bath.ac.uk"
                    android:textSize="15dp"
                    android:textColor="?attr/primaryTextColor" />
                <Button
                    android:layout_width="210dp"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@id/vn"
                    android:layout_below="@id/vnemail"
                    android:text="Administration and Marketing Lead"
                    android:textSize="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/yellow_button"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/cr"
                android:layout_below="@+id/vn"
                android:layout_marginTop="15dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cr"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/cr"
                    app:civ_border_width="2dp"
                    app:civ_border_color="?attr/primaryTextColor"/>
                <TextView
                    android:id="@+id/crname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cr"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:text="Carlston Rebelo"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTextColor" />
                <TextView
                    android:id="@+id/cremail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cr"
                    android:layout_below="@id/crname"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:text="notslrac3@gmail.com"
                    android:textSize="15dp"
                    android:textColor="?attr/primaryTextColor" />
                <Button
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@id/cr"
                    android:layout_below="@id/cremail"
                    android:text="Artist"
                    android:textSize="10dp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/blue_button2"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/az"
                android:layout_below="@+id/cr"
                android:layout_marginTop="15dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/az"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/az"
                    app:civ_border_width="2dp"
                    app:civ_border_color="?attr/primaryTextColor"/>
                <TextView
                    android:id="@+id/azname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/az"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:text="Alex Zamurca"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?attr/primaryTextColor" />
                <TextView
                    android:id="@+id/azemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/az"
                    android:layout_below="@id/azname"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:text="az506@bath.ac.uk"
                    android:textSize="15dp"
                    android:textColor="?attr/primaryTextColor" />
                <Button
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@id/az"
                    android:layout_below="@id/azemail"
                    android:text="Front End Developer"
                    android:textSize="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/green_button"
                    />
                <Button
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_toEndOf="@id/azemail"
                    android:layout_below="@id/azemail"
                    android:text="Back End Developer"
                    android:textSize="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/red_button"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>