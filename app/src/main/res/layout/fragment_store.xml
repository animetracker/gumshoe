<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <include
        layout="@layout/store_toolbar"
        android:id="@+id/change_profile_toolbar_object"/>

    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/change_profile_toolbar_object"
        android:layout_weight="8"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:background="?attr/bg"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/icon1"
            android:onClick="iconClicked"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/bgh">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:background="?attr/bgh">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ash"
                    app:civ_border_width="2dp"
                    app:civ_border_color="?attr/primaryTextColor"/>

               <Button
                   android:layout_width="60dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:text="200"
                   android:background="@color/greyishWhite"
                   android:drawableRight="@drawable/ic_baseline_monetization_on_24"
                   />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/icon2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/bgh">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:background="?attr/bgh">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image2"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ash"
                    app:civ_border_width="2dp"
                    app:civ_border_color="?attr/primaryTextColor"/>

                <Button
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="200"
                    android:background="@color/greyishWhite"
                    android:drawableEnd="@drawable/ic_baseline_monetization_on_24"
                    android:bottomRightRadius="10dp"
                    android:bottomLeftRadius="10dp"
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/icon3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/bgh">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image3"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:src="@drawable/goku"
                    app:civ_border_width="2dp"
                    app:civ_border_color="?attr/primaryTextColor"/>

                <Button
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="200"
                    android:background="@color/greyishWhite"
                    android:drawableEnd="@drawable/ic_baseline_monetization_on_24"
                    android:bottomRightRadius="10dp"
                    android:bottomLeftRadius="10dp"
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/icon4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/bgh">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image4"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:src="@drawable/luffy"
                    app:civ_border_width="2dp"
                    app:civ_border_color="?attr/primaryTextColor"/>

                <Button
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="200"
                    android:background="@color/greyishWhite"
                    android:drawableEnd="@drawable/ic_baseline_monetization_on_24"
                    android:bottomRightRadius="10dp"
                    android:bottomLeftRadius="10dp"
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/icon5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/bgh">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image5"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:src="@drawable/naruto"
                    app:civ_border_width="2dp"
                    app:civ_border_color="?attr/primaryTextColor"/>

                <Button
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="200"
                    android:background="@color/greyishWhite"
                    android:drawableEnd="@drawable/ic_baseline_monetization_on_24"
                    android:bottomRightRadius="10dp"
                    android:bottomLeftRadius="10dp"
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/icon6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?attr/bgh">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image6"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo"
                    app:civ_border_width="2dp"
                    app:civ_border_color="?attr/primaryTextColor"/>

                <Button
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="200"
                    android:background="@color/greyishWhite"
                    android:drawableEnd="@drawable/ic_baseline_monetization_on_24"
                    android:bottomRightRadius="10dp"
                    android:bottomLeftRadius="10dp"
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>

</RelativeLayout>