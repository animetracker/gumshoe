<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="?attr/seriesRowButtonBg">

        <ImageView
            android:id="@+id/icon_image_id"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="130dp"
            android:scaleType="centerCrop"

            android:background="?attr/seriesRowBg">

        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/icon_name_id"
                android:textColor="?attr/primaryTextColor"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Icon Name">

            </TextView>

            <TextView
                android:id="@+id/icon_price"
                android:textColor="?attr/primaryTextColor"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_below="@id/icon_name_id"
                android:text="Cost">

            </TextView>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>